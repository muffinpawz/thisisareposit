  </head>

  <body>
   <div class="site-wrapper">
  
      <div class="sit-wrapper-inner">
     
          <div class="cover-container">
     
    
                  <%= login_helper %>
    
                  <%= render "shared/application_nav" %>
     
                  <%= source_helper("application") %>
     
                  <%= yield %>
                 
                  <%= copyright_generator %>
                  
          </div>
            
       </div>
       
     </div>
    
  </body>
</html>
