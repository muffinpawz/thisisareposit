<!DOCTYPE html>
<html>
  <head>
    <title> <%= @page_title %> </title>
    <%= csrf_meta_tags %>

    <meta name="keywords" contents="<%= @seo_keywords %>" />
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if current_user.is_a?(User) %>
     <%= link_to "Logout", destroy_user_session_path, method: :delete %>
     <%= link_to "Edit Profile",  edit_user_registration_path %>
     <% else %>
     <%= link_to "Login", new_user_session_path %>
     <%= link_to "Register", new_user_registration_path %>
     
     <% end %>
     
  <p>-Directory-</p>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
     
     <div>
        <div> <%= link_to "Home", home_path %> </div>
        <div> <%= link_to "Contact", contact_path %> </div>
        <div> <%= link_to "About", about_path %> </div>
        <div> <%= link_to "Portfolios", portfolios_url %> </div>
        <div> <%= link_to "Blogs", blogs_path %> </div>
     </div>
     
   
     
    <%= yield %>
    
    <% if session[:source] %>
      <p>Thanks for visting me from <%= session[:source] %> </p>
    <% end %>
  </body>
</html>
